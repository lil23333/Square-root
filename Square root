<script>
let inp = document.querySelectorAll('input');
let p = document.querySelector('p');
let btn = document.querySelector('button');
let res = 0;
undefined
function ff () {
    for (let el of inp) {
let ell = +el.value;
        res += ell;
        p.textContent = Math.sqrt(res);
    }}

btn.addEventListener('click', ff);
